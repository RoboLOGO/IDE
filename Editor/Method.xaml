<Window x:Class="Editor.Method"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Method" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TabControl>
                <TabItem Header="Eljárások">
                    <GroupBox Margin="12,0,12,36" Header="Eljárások">
                        <StackPanel>
                            <Grid>
                                <Button Height="25" Width="62" Margin="6,139,164,6" Click="Method_Add_Click">Hozzáadás</Button>
                                <Button Height="25" Width="59" Margin="74,139,99,6" Click="DeleteMethod_Click">Eltávolítás</Button>
                                <RichTextBox x:Name="methodCommandLine" TextChanged="TextChangedEventHandler" Margin="85,6,6,37" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" Width="141">
                                    <FlowDocument Name="fdtext">
                                        <Paragraph FontSize="10pt" LineHeight="0.1pt" >
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                                <ListBox Margin="6,6,154,37" Width="72" x:Name="methodList" SelectionChanged="select_SelectionChanged" ></ListBox>
                                <Button Margin="0,182,0,-37" Height="25" HorizontalAlignment="Right" Width="50" Click="Method_Close_Click">OK</Button>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </TabItem>
                <TabItem Header="Változók">
                    <GroupBox Margin="12,0,12,36" Header="Változók" Height="197">
                        <StackPanel>
                            <Grid Height="174">
                                <Button Name="AddVariable" Height="28" Width="66" Margin="88,140,78,6" Click="AddVariable_Click">Hozzáadás</Button>
                                <Button Margin="0,182,0,-37" Height="25" HorizontalAlignment="Right" Width="50" Click="Method_Close_Click">Ok</Button>
                                <Button Name="DeleteValriable" Content="Eltávolítás" Height="28" Margin="160,140,6,6" Width="66" Click="DeleteValriable_Click" />
                                <DataGrid Margin="0,0,6,40" Width="226" x:Name="DataGrid">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Név" IsReadOnly="True" />
                                        <DataGridTextColumn Header="Érték" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>
