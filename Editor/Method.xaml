<Window x:Class="Editor.Method"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Method" Height="362" Width="395" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid>
        <TabControl Height="322">
            <TabItem Header="Eljárások">
                <Grid Height="296">
                    <Button Height="25" Width="62" Margin="9,240,0,31" Click="Method_Add_Click" HorizontalAlignment="Left">Hozzáadás</Button>
                    <Button Height="25" Width="59" Margin="77,240,0,0" Click="DeleteMethod_Click" HorizontalAlignment="Left" VerticalAlignment="Top">Eltávolítás</Button>
                    <RichTextBox x:Name="methodCommandLine" TextChanged="TextChangedEventHandler" Margin="84,6,6,62" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" Width="273">
                        <FlowDocument Name="fdtext">
                            <Paragraph FontSize="10pt" LineHeight="0.1pt"></Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <ListBox Margin="9,6,0,62" Width="72" x:Name="methodList" SelectionChanged="Select_SelectionChanged" HorizontalAlignment="Left"></ListBox>
                    <Button Height="25" Width="50" Click="Method_Close_Click" Margin="307,258,6,13">Ok</Button>
                </Grid>
            </TabItem>
            <TabItem Header="Változók">
                <Grid Height="297" Width="369">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Name="AddVariable" Height="25" Width="62" Margin="9,240,298,31" Click="AddVariable_Click">Hozzáadás</Button>
                    <Button Name="DeleteValriable" Content="Eltávolítás" Height="25" Width="62" Margin="77,240,230,31" Click="DeleteValriable_Click" />
                    <DataGrid Margin="9,7,7,60" x:Name="dataGrid" SelectionMode="Single" AutoGenerateColumns="False" CanUserAddRows="False" CanUserResizeRows="False" CellEditEnding="dataGrid_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Név" Binding="{Binding Name}" IsReadOnly="True" Width="Auto"/>
                            <DataGridTextColumn Header="Érték" Binding="{Binding Value}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Height="25" Width="50" Click="Method_Close_Click" Margin="307,259,12,13">OK</Button>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
