<Window x:Class="Editor.MethodName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource methodnameheader}" Height="130" Width="227" ResizeMode="NoResize">
    <Grid Margin="10,5,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="{DynamicResource methodname}" Name="methodNameText"/>
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Name="methodnameTextBox" Width="125" />
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="23" Width="70" Grid.Row="2" Click="Method_Name_Add_Click" Content="{DynamicResource add}" Name="addButton" />
    </Grid>
</Window>
